<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false">

    <!-- Your normal content view -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/my_awesome_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:elevation="8dp"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!--
                <ToggleButton
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:id="@+id/scanButton"
                    android:checked="false"
                    android:textOn="BT is ON"
                    android:textOff="BT is OFF"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:layout_gravity="center_horizontal|bottom" />
            -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:layout_gravity="center"
                android:textSize="30sp" />

            <ToggleButton
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:id="@+id/sensorToggleButton"
                android:checked="false"
                android:textOn="Sensors are ON"
                android:textOff="Sensors are OFF"
                android:textSize="24sp"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal|bottom" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/subjectText"
                android:layout_gravity="top"
                android:textSize="24sp" />

            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="236dp"
                android:layout_height="179dp"
                android:layout_gravity="center_horizontal|top" />

            <TextView
                android:id="@+id/empty_state"
                android:layout_width="370dp"
                android:layout_height="392dp"
                android:layout_margin="24dp"
                android:drawableTop="@drawable/large_bw"
                android:gravity="center"
                android:text="@string/main_sensor_heading"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:elevation="-1dp"
              />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFcccccc"
            android:elevation="8dp"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="1"
            android:layout_weight="0.10">

            <!--
            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/tagname"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="8sp"
                    android:layout_weight="1"
                    android:visibility="gone" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/tag_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:visibility="gone" />
            -->


        </LinearLayout>


    </LinearLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_layout"/>

</android.support.v4.widget.DrawerLayout>
